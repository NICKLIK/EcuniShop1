@model EcuniShop1.Models.Estudiante

@{
    ViewData["Title"] = "Registrar Estudiante";
}

<h1>Registro de Estudiante</h1>

<h4>Aqui se registran los nuevos estudiantes con sus respectivos datos:</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NombreEstudiante" class="control-label"></label>
                <input asp-for="NombreEstudiante" class="form-control" />
                <span asp-validation-for="NombreEstudiante" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ApellidoEstudiante" class="control-label"></label>
                <input asp-for="ApellidoEstudiante" class="form-control" />
                <span asp-validation-for="ApellidoEstudiante" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Membresia" class="control-label"></label>
                <input asp-for="Membresia" class="form-control" />
                <span asp-validation-for="Membresia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaNacimiento" class="control-label"></label>
                <input asp-for="FechaNacimiento" class="form-control" />
                <span asp-validation-for="FechaNacimiento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdUbicacion" class="control-label"></label>
                <input asp-for="IdUbicacion" class="form-control" />
                <span asp-validation-for="IdUbicacion" class="text-danger"></span>
            </div>
            <div class="form-group d-flex">
                <input type="submit" value="Registrar" class="btn btn-primary mr-4" />
                <a asp-action="Index" class="btn btn-light">Regresar</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
