@model EcuniShop1.Models.Estudiante

@{
    ViewData["Title"] = "Eliminar Estudiante";
}

<h1>Eliminar Estudiante</h1>

<h3>Tenga en cuenta que no se pueden recuperar los datos eliminados </h3>
<div>
    <h4>Datos del estudiante registrado: </h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NombreEstudiante)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NombreEstudiante)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ApellidoEstudiante)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ApellidoEstudiante)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Membresia)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Membresia)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FechaNacimiento)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FechaNacimiento)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IdUbicacion)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdUbicacion)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdEstudiante" />
        <input type="submit" value="Eliminar Estudiante" class="btn btn-danger" /> 
        <a asp-action="Index" class="btn btn-light">Regresar</a>
    </form>
</div>
