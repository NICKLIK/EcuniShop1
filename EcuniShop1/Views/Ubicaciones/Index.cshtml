@model IEnumerable<EcuniShop1.Models.Ubicacion>

@{
    ViewData["Title"] = "Ubicaciones";
}

<h1>Ubicaciones</h1>

<p>
    <a asp-action="Create">
        <button type="button" class="btn btn-primary">Crear Ubicación</button>
    </a>

</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Provincia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ciudad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DescuentoUbicacion)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Provincia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ciudad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DescuentoUbicacion)            
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.IdUbicacion" class="btn btn-dark">Editar</a> 
                    <a asp-action="Details" asp-route-id="@item.IdUbicacion" class="btn btn-warning">Detalles</a> 
                    <a asp-action="Delete" asp-route-id="@item.IdUbicacion" class="btn btn-danger">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
