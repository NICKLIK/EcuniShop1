@model EcuniShop1.Models.Catalogo

@{
    ViewData["Title"] = "Editar Catalogos";
}

<h1>Editar Catalogos</h1>

<h4>Aqui se puede editar los datos de los catalogos:</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdCatalogo" />
            <div class="form-group">
                <label asp-for="Categoria" class="control-label"></label>
                <input asp-for="Categoria" class="form-control" />
                <span asp-validation-for="Categoria" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FiltroBusqueda" class="control-label"></label>
                <input asp-for="FiltroBusqueda" class="form-control" />
                <span asp-validation-for="FiltroBusqueda" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdProducto" class="control-label"></label>
                <input asp-for="IdProducto" class="form-control" />
                <span asp-validation-for="IdProducto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar Cambios" class="btn btn-primary mr-4" />
                <a asp-action="Index" class="btn btn-light">Regresar</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
