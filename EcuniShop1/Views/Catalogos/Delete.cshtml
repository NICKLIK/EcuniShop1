@model EcuniShop1.Models.Catalogo

@{
    ViewData["Title"] = "Eliminar Catalogo";
}

<h1>Eliminar Catalogo</h1>

<h3>Aqui se eliminan los catalogos creados anteriormente</h3>
<div>
    <h4>Datos del Catalogo:</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Categoria)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Categoria)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FiltroBusqueda)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FiltroBusqueda)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IdProducto)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdProducto)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdCatalogo" />
        <input type="submit" value="Eliminar Catalogo" class="btn btn-danger" /> 
        <a asp-action="Index" class="btn btn-light">Regresar</a>
    </form>
</div>
