@model IEnumerable<EcuniShop1.Models.Catalogo>

@{
    ViewData["Title"] = "Catalogos";
}

<h1>Catalogos</h1>

<p>
    <a asp-action="Create">
        <button type="button" class="btn btn-primary">Crear Catalogos </button>
    </a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Categoria)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FiltroBusqueda)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdProducto)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Categoria)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FiltroBusqueda)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdProducto)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.IdCatalogo" class="btn btn-dark">Editar</a> 
                    <a asp-action="Details" asp-route-id="@item.IdCatalogo" class="btn btn-warning">Detalles</a> 
                    <a asp-action="Delete" asp-route-id="@item.IdCatalogo" class="btn btn-danger">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
